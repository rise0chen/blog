if theme.addToAny_share && theme.addToAny_share.length > 0
  .addToAny_share
    = __("shareto") + " : "
    a(href="https://www.addtoany.com/share?linkurl="+url+"&linkname="+page.title target="_blank")
      img(src="https://static.addtoany.com/buttons/a2a.svg" width="16" height="16" style="vertical-align:middle")
    | &nbsp;
    each a2a_item in theme.addToAny_share
      a(href="https://www.addtoany.com/add_to/"+a2a_item+"?linkurl="+url+"&linkname="+page.title target="_blank")
        img(src="https://static.addtoany.com/buttons/"+a2a_item+".svg" width="16" height="16" style="vertical-align:middle")
      | &nbsp;
